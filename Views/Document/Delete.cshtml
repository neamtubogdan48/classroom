@model mvc.Models.Document

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/delete.css" asp-append-version="true" />


<h1 class="centerDiv">Are you sure you want to delete this entry?</h1>

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.id)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.studentDoc)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.grade)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.assignmentId)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.userId)
		</th>
	</tr>
	<tr>
		<td>
			@Html.DisplayFor(model => model.id)
		</td>
		<td>
			@if (!string.IsNullOrEmpty(Model.studentDoc))
			{
				<a href="@Model.studentDoc" target="_blank">@Html.DisplayFor(model => model.studentDoc)</a>
			}
			@if (string.IsNullOrEmpty(Model.studentDoc))
			{
				<span>No document uploaded</span>
			}
		</td>
		<td>
			@Html.DisplayFor(model => model.grade)
		</td>
		<td>
			@Html.DisplayFor(model => model.assignmentId)
		</td>
		<th>
			@Html.DisplayNameFor(model => model.userId)
		</th>
	</tr>
</table>

<div class="centerDiv">
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn" /> 
        <a asp-action="Index" class="btn">Back to List</a>
    </form>
</div>
