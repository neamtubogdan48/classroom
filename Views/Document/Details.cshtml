@model mvc.Models.Document

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/detail.css" asp-append-version="true" />


<h1 class="centerDiv">Details</h1>

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.id)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.studentDoc)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.grade)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.assignmentId)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.userId)
		</th>
	</tr>
	<tr>
		<td>
			@Html.DisplayFor(model => model.id)
		</td>
		<td>	
			@if (!string.IsNullOrEmpty(Model.studentDoc))
			{
				<a href="@Model.studentDoc" target="_blank">@Html.DisplayFor(model => model.studentDoc)</a>
			}
			@if (string.IsNullOrEmpty(Model.studentDoc))
			{
				<span>No document uploaded</span>
			}
		</td>
		<td>
			@Html.DisplayFor(model => model.grade)
		</td>
		<td>
			@Html.DisplayFor(model => model.assignmentId)
		</td>
		<th>
			@Html.DisplayFor(model => model.userId)
		</th>
	</tr>
</table>

<div class="centerDiv">
    <a asp-action="Edit" asp-route-id="@Model.id" class="btn">Edit</a> 
    <a asp-action="Index" class="btn">Back to List</a>
</div>
