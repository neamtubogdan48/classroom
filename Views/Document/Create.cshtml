@model mvc.Models.Document

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/flux.css" asp-append-version="true" />


<h1 class="centerDiv">Create</h1>

<div class="centerDiv">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div>
            <label for="studentDocFile" class="control-label">Upload Document</label>
            <input type="file" name="studentDocFile" id="studentDocFile" class="form-control" />
            <span class="text-danger">@ViewData["FileUploadError"]</span>
        </div>
        <div>
            <label asp-for="grade" class="control-label"></label>
            <input asp-for="grade" class="form-control" />
            <span asp-validation-for="grade" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="assignmentId" class="control-label"></label>
            <input asp-for="assignmentId" class="form-control" />
            <span asp-validation-for="assignmentId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="userId" class="control-label"></label>
            <input asp-for="userId" class="form-control" />
            <span asp-validation-for="userId" class="text-danger"></span>
        </div>
        <div class="centerDiv">
            <input type="submit" value="Create" class="btn" />
        </div>
    </form>
</div>

<div class="centerDiv">
    <a asp-action="Index" class="btn">Back to List</a>
</div>
