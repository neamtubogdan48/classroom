@model mvc.Models.UserAccount

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/flux.css" asp-append-version="true" />


<h1 class="centerDiv">Create</h1>

<div class="centerDiv">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div>
            <label asp-for="UserName" class="control-label"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="PasswordHash" class="control-label"></label>
            <input asp-for="PasswordHash" class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="accountType" class="control-label"></label>
            <select asp-for="accountType" class="form-control">
                <option value="Admin">Admin</option>
                <option value="Professor">Professor</option>
                <option value="Student">Student</option>
            </select>
            <span asp-validation-for="accountType" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="githubLink" class="control-label"></label>
            <input asp-for="githubLink" class="form-control" />
            <span asp-validation-for="githubLink" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="notificationSettings" class="control-label"></label>
            <select asp-for="notificationSettings" class="form-control">
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
            <span asp-validation-for="notificationSettings" class="text-danger"></span>
        </div>
        <div>
            <label for="profilePhotoFile" class="control-label">Upload profile photo</label>
            <input type="file" name="profilePhotoFile" id="profilePhotoFile" class="form-control" />
            <span class="text-danger">@ViewData["FileUploadError"]</span>
        </div>
        <div class="form-actions">
            <input type="submit" value="Create" class="btn-primary" />
        </div>

    </form>
</div>

<div class="centerDiv">
    <a asp-action="Index" class="btn">Back to List</a>
</div>
