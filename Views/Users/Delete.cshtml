@model mvc.Models.UserAccount

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/delete.css" asp-append-version="true" />


<h1 class="centerDiv">Are you sure you want to delete this entry?</h1>

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Id)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.UserName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Email)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.accountType)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.notificationSettings)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.githubLink)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.PhoneNumber)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.profilePhoto)
		</th>
	</tr>
	<tr>
		<td>
			@Html.DisplayFor(model => model.Id)
		</td>
		<td>
			@Html.DisplayFor(model => model.UserName)
		</td>
		<td>
			@Html.DisplayFor(model => model.Email)
		</td>
		<td>
			@Html.DisplayFor(model => model.accountType)
		</td>
		<td>
			@Html.DisplayFor(model => model.notificationSettings)
		</td>
		<td>
			@Html.DisplayFor(model => model.githubLink)
		</td>
		<td>
			@Html.DisplayFor(model => model.PhoneNumber)
		</td>
		<td>
			@if (Model != null && !string.IsNullOrEmpty(Model.profilePhoto))
			{
				<a href="@Model.profilePhoto" target="_blank">@Html.DisplayFor(model => model.profilePhoto)</a>
			}
			else
			{
				<span>No document uploaded</span>
			}

		</td>
	</tr>
</table>

<div class="centerDiv">
	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn" /> 
		<a asp-action="Index" class="btn">Back to List</a>
	</form>
</div>
