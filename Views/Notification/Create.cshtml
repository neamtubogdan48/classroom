@model mvc.Models.Notification

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/flux.css" asp-append-version="true" />


<h1 class="centerDiv">Create</h1>

<div class="centerDiv">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div>
            <label asp-for="name" class="control-label"></label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="description" class="control-label"></label>
            <input asp-for="description" class="form-control" />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="timeSent" class="control-label"></label>
            <input asp-for="timeSent" class="form-control" type="datetime-local" />
            <span asp-validation-for="timeSent" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="userId" class="control-label"></label>
            <input asp-for="userId" class="form-control" />
            <span asp-validation-for="userId" class="text-danger"></span>
        </div>
        <div class="centerDiv">
            <input type="submit" value="Create" class="btn" />
        </div>
    </form>
</div>

<div class="centerDiv">
    <a asp-action="Index" class="btn">Back to List</a>
</div>
